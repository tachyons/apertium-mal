<?xml version="1.0" encoding="UTF-8"?>
<modes>
  <mode name="sme-smj" install="yes">
    <pipeline>
      <program name="lt-proc">
        <file name="sme-smj.automorf.bin"/>
      </program>
      <program name="cg-proc">
        <file name="sme-smj.rlx.bin"/> 
      </program>
      <program name="apertium-tagger -g $2">
        <file name="sme-smj.prob"/>
      </program>
<!--      <program name="apertium-pretransfer"/> -->
      <program name="apertium-transfer">
        <file name="apertium-sme-smj.sme-smj.t1x"/>
        <file name="sme-smj.t1x.bin"/>
        <file name="sme-smj.autobil.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-sme-smj.sme-smj.t2x"/>
        <file name="sme-smj.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-sme-smj.sme-smj.t3x"/>
        <file name="sme-smj.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="sme-smj.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="sme-smj.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="sme-smj-tagger" install="no">
