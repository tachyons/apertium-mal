  <section-def-macros>
    <def-macro n="synthetic-to-analytical-conversion-1" npar="1">
      <let><var n="pre-adj-tag-1"/><lit v=""/></let>
      <choose>
        <when>
          <test>
            <not> <!-- If we're dealing with an analytical adjective in the target -->
              <or>
                <equal>
                  <clip pos="1" side="tl" part="a_adj"/>
                  <lit-tag v="adj.sint.comp"/>
                </equal>
                <equal>
                  <clip pos="1" side="tl" part="a_adj"/>
                  <lit-tag v="adj.sint.sup"/>
                </equal>
              </or>
            </not>
          </test>
          <choose>
            <when>
              <test>
                <equal>
                  <clip pos="1" side="sl" part="a_adj"/>
                  <lit-tag v="adj.sint.comp"/>
                </equal>
              </test>
              <append n="pre-adj-tag-1">
                <lit v="meer"/><lit-tag v="preadv"/><lit-tag v="sint"/>
              </append>
            </when>
            <when>
              <test>
                <equal>
                  <clip pos="1" side="sl" part="a_adj"/>
                  <lit-tag v="adj.sint.sup"/>
                </equal>
              </test>
              <append n="pre-adj-tag-1">
                <lit v="mees"/><lit-tag v="preadv"/><lit-tag v="sint"/>
              </append>
            </when>
          </choose>
        </when>
      </choose>
    </def-macro>

    <def-macro n="synthetic-to-analytical-conversion-2" npar="1">
      <let><var n="pre-adj-tag-2"/><lit v=""/></let>
      <choose>
        <when>
          <test>
            <not> <!-- If we're dealing with an analytical adjective in the target -->
              <equal>
                <clip pos="1" side="tl" part="a_adj"/>
                <lit-tag v="adj.sint"/>
              </equal>
            </not>
          </test>
          <choose>
            <when>
              <test>
                <equal>
                  <clip pos="1" side="sl" part="a_adj"/>
                  <lit-tag v="adj.sint.comp"/>
                </equal>
              </test>
              <append n="pre-adj-tag-2">
                <lit v="meer"/><lit-tag v="preadv"/><lit-tag v="sint"/>
              </append>
            </when>
            <when>
              <test>
                <equal>
                  <clip pos="1" side="sl" part="a_adj"/>
                  <lit-tag v="adj.sint.sup"/>
                </equal>
              </test>
