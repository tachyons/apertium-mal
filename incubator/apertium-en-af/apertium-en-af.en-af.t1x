    <!-- ^be<vbser><past>$ ^organise<vblex><pp>$ -->
    <rule comment="REGLA: VERBNM VERBNM">
      <pattern>
        <pattern-item n="verbnm"/>
        <pattern-item n="verbnm"/>
      </pattern>
      <action>
        <choose>
          <when>        <!-- I am loved -> Ek word lief gehê. He is hated -> Hy word gehaat. -->
            <test>      <!-- It is thought that... -> Dit word gedink dat... -->
	      <and>     <!-- is/am/are + <pp> -> word + <pp> -->
                <equal>
                  <clip pos="1" side="sl" part="a_verb"/>
                  <lit-tag v="vbser"/>
                </equal>
                <equal>
                  <clip pos="1" side="sl" part="temps"/>
                  <lit-tag v="pri"/>
                </equal>
                <equal>
                  <clip pos="2" side="tl" part="temps"/>
                  <lit-tag v="pp"/>
                </equal>
	      </and>
            </test>
            <out>
              <chunk name="verb">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                </tags>
                <lu>
                  <lit v="word"/>
                  <lit-tag v="vblex"/>
                  <lit-tag v="pres"/>
                </lu>
	      </chunk>
              <b/>
              <chunk name="verb_participle">
	        <tags>
	          <tag><lit-tag v="V"/></tag>
	          <tag><lit-tag v="PART"/></tag>
	        </tags>
	        <lu>
	          <lit v="ge"/>
	        </lu>
                <lu>
                  <clip pos="2" side="tl" part="lemh"/>
                  <clip pos="2" side="tl" part="a_verb"/>
	          <lit-tag v="inf"/>
                  <clip pos="2" side="tl" part="lemq"/>
                </lu>
              </chunk>
            </out>
          </when>

          <when>						<!-- If the first verb is a past participle -->
            <test>   
                <equal>
                  <clip pos="1" side="tl" part="temps"/>
                  <lit-tag v="pp"/>
                </equal>
            </test>
            <out>
              <chunk name="verb">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                </tags>
              <lu>
                  <lit v="hê"/>
                  <lit-tag v="vbhaver"/>
                  <lit-tag v="pres"/>
              </lu>
              </chunk>
              <b/>
              <chunk name="verb_participle">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                  <tag><lit-tag v="PART"/></tag>
                </tags>
              <lu>
                  <lit v="ge"/>
                </lu>
              <lu>
                  <clip pos="1" side="tl" part="lemh"/>
                  <clip pos="1" side="tl" part="a_verb"/>
                  <lit-tag v="inf"/>
                  <clip pos="1" side="tl" part="lemq"/>
              </lu>
              </chunk>
            </out>
          </when>

          <when>							<!-- If it is a past participle, the verb 'to be' or in the past -->
            <test> 
	      <and>
                <equal>
                  <clip pos="2" side="tl" part="temps"/>
                  <lit-tag v="pp"/>
                </equal>
                <equal>
                  <clip pos="1" side="sl" part="lem"/>
                  <lit v="be"/>
                </equal>
                <equal>
                  <clip pos="1" side="sl" part="temps"/>
                  <lit-tag v="past"/>
                </equal>
	      </and>
            </test>
            <out>
              <chunk name="verb">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                </tags>
              <lu>
                  <clip pos="1" side="tl" part="lemh"/>
                  <clip pos="1" side="tl" part="a_verb"/>
                  <clip pos="1" side="tl" part="temps"/> 
                  <clip pos="1" side="tl" part="lemq"/>
              </lu>
	      </chunk>
              <b/>
	      <chunk name="verb_participle">
	        <tags>
		  <tag><lit-tag v="V"/></tag>
		  <tag><lit-tag v="PART"/></tag>
		</tags>
	      <lu>
		  <lit v="ge"/>
		</lu>
              <lu>
                  <clip pos="2" side="tl" part="lemh"/>
                  <clip pos="2" side="tl" part="a_verb"/>
		  <lit-tag v="inf"/>
<!--                  <clip pos="2" side="tl" part="temps"/> -->

                  <clip pos="2" side="tl" part="lemq"/>
              </lu>
              </chunk>
            </out>
          </when>

          <when>
            <test> 
              <and>
                <equal>
                  <clip pos="2" side="sl" part="temps"/>
                  <lit-tag v="pp"/>
                </equal>
                <equal>
                  <clip pos="1" side="sl" part="lem"/>
                  <lit v="be"/>
                </equal>
		<or>
                  <equal>
                    <clip pos="1" side="sl" part="temps"/>
                    <lit-tag v="pri"/>
                  </equal>
                  <equal>
                    <clip pos="1" side="sl" part="temps"/>
                    <lit-tag v="pres"/>
                  </equal>
		</or>
              </and>
            </test>
            <out>
              <chunk name="verb">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                </tags>
              <lu>
                  <clip pos="1" side="tl" part="lemh"/>
                  <clip pos="1" side="tl" part="a_verb"/>
	          <lit-tag v="pres"/>
                  <clip pos="1" side="tl" part="lemq"/>
              </lu>
	      </chunk>
              <b/>
	      <chunk name="verb_participle">
	        <tags>
		  <tag><lit-tag v="V"/></tag>
		  <tag><lit-tag v="PART"/></tag>
		</tags>
	      <lu>
		  <lit v="ge"/>
		</lu>
              <lu>
                  <clip pos="2" side="tl" part="lemh"/>
                  <clip pos="2" side="tl" part="a_verb"/>
		  <lit-tag v="inf"/>
                  <clip pos="2" side="tl" part="lemq"/>
<!--                  <clip pos="2" side="tl" part="temps"/> -->
              </lu>
              </chunk>
            </out>
          </when>

          <otherwise>
            <out>
              <chunk name="verb">
                <tags>
                  <tag><lit-tag v="V"/></tag>
                </tags>
                <lu>
                  <clip pos="1" side="tl" part="lemh"/>
                  <clip pos="1" side="tl" part="a_verb"/>
                  <clip pos="1" side="tl" part="temps"/>
                  <clip pos="1" side="tl" part="lemq"/>
                </lu>
		<b/>
                <lu>
                  <clip pos="2" side="tl" part="lemh"/>
                  <clip pos="2" side="tl" part="a_verb"/>
                  <clip pos="2" side="tl" part="temps"/>
                  <clip pos="2" side="tl" part="lemq"/>
                </lu>
              </chunk>
            </out>
          </otherwise>
        </choose>
      </action>
    </rule>



