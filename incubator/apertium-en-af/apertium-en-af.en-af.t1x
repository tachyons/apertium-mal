                <lit v="mees"/><lit-tag v="preadv"/><lit-tag v="sint"/>
              </append>
            </when>
          </choose>
        </when>
      </choose>
    </def-macro>

    <def-macro n="test-if-synthetic-1" npar="1">
      <choose>
        <when>
          <test>
            <not>
              <or>
                <equal>
                  <clip pos="1" side="tl" part="a_adj"/>
                  <lit-tag v="adj.sint.comp"/>
                </equal>
                <equal>
                  <clip pos="1" side="tl" part="a_adj"/>
                  <lit-tag v="adj.sint.sup"/>
                </equal>
              </or>
            </not>
          </test>
          <let><var n="attr-tag-1"/><lit-tag v="attr"/></let>
        </when>
        <otherwise>
          <let><var n="attr-tag-1"/><lit v=""/></let>
        </otherwise>
      </choose>
    </def-macro>

    <def-macro n="test-if-synthetic-2" npar="1"> <!-- WHAT AWFUL DUPLICATION. WE'LL FIND A BETTER WAY YET. -->
      <choose>
        <when>
          <test>
            <not>
              <or>
                <equal>
