    <def-macro n="f_bcond" npar="1">
      <choose>
	<when>
	  <test>
	    <not>
	      <equal>
		<b pos="1"/>   
		<lit v=" "/>
	      </equal>
	    </not>
	  </test>
	  <out>
	    <b pos="1"/>
	  </out>  
	</when>     
      </choose>
    </def-macro>

    <def-macro n="gen_nbr_determinante" npar="1">
      <choose>
	<when>
	  <test>
	    <not>
	      <equal>
		<clip pos="1" part="gen"/>
		<lit-tag v="mf"/>
	      </equal>
	    </not>
	  </test>
	  <let>
	    <var n="genero"/>
	    <clip pos="1" part="gen"/>
	  </let>
	</when>
	<otherwise>
	  <let>
	    <var n="genero"/>
	    <lit-tag v="m"/>
	  </let>
	</otherwise>
      </choose>
      <choose>
	<when>
	  <test>
	    <not>
	      <equal>
		<clip pos="1" part="nbr"/>
		<lit-tag v="sp"/>
	      </equal>
	    </not>
	  </test>
	  <let>
	    <var n="numero"/>
	    <clip pos="1" part="nbr"/>
	  </let>
	</when>
	<otherwise>
	  <let>
	    <var n="numero"/>
	    <lit-tag v="sg"/>
	  </let>
	</otherwise>
      </choose>
    </def-macro>
		 
	    

