    <rule comment="CHUNK: BE (there is)">
      <pattern>
	<pattern-item n="be"/>
      </pattern>
      <action>
	<choose>
	  <when>
	    <test>
	      <equal>
		<clip pos="0" part="a_verb"/>
		<lit-tag v="HAVER"/>
	      </equal>
	    </test>
	    <choose><!--en aquesta regla, el nom no diferencia el perifràstic del sintètic: cal mirar si la primera paraula és 'anar' i modificar el lema de la 2a paraula en cas afirmatiu; si no, el de la primera. -->
	      <when>
		<test>
		  <equal caseless="yes">
		    <clip pos="1" part="lem"/>
		    <lit v="anar"/>
		  </equal>
		</test>
		<let>
		  <clip pos="2" part="lem"/>
		  <lit v="haver"/>
		</let>		
		<let>
		  <clip pos="2" part="a_verb"/>
		  <lit-tag v="vbhaver"/>
		</let>
	      </when>
	      <otherwise>
		<let>
		  <clip pos="1" part="lem"/>
		  <lit v="haver"/>
		</let>
		<let>
		  <clip pos="1" part="a_verb"/>
		  <lit-tag v="vbhaver"/>
		</let>		
	      </otherwise>
	    </choose>
	  </when>
	</choose>
	<choose><!--imprimeix, 1 o 2 chunks segons si és perifràstic o no-->
	  <when>
	    <test>
	      <equal caseless="yes">
		<clip pos="1" part="lem"/>
		<lit v="anar"/>
	      </equal>
	    </test>
	    <out>
	      <lu>
		<clip pos="1" part="whole"/>
	      </lu> 
	      <b pos="1"/>
	      <lu>
		<clip pos="2" part="whole"/>
	      </lu>
	    </out>
	  </when>
	  <otherwise>
	    <out>
	      <lu>
		<clip pos="1" part="whole"/>
	      </lu> 
	    </out>
	  </otherwise>
	</choose>
      </action>
    </rule>

    
